<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<base href="<%- base %>">

	<% if( title && title !== "Carbon LDP" ) { %>
	<title><%- title %> | Carbon LDP</title>
	<meta name="title" content="<%- title %> | Carbon LDP">
	<meta name="og:title" content="<%- title %> | Carbon LDP">
	<% } else { %>
	<title>Carbon LDP</title>
	<meta name="title" content="Carbon LDP">
	<meta name="og:title" content="Carbon LDP">
	<% } %>

	<meta name="description" content="<%- description %>">
	<meta name="og:description" content="<%- description %>">

	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="shortcut icon" href="assets/images/carbon-icon-144x144.png"/>
	<link rel="stylesheet" href="semantic/dist/semantic.min.css">
	<!---Google Analytics-->
	<script>
		var _gaq = _gaq || []; // Initialize empty variable for angulartics2 plugin.
		(function( i, s, o, g, r, a, m ) {
			i[ 'GoogleAnalyticsObject' ] = r;
			i[ r ] = i[ r ] || function() {
					(i[ r ].q = i[ r ].q || []).push( arguments )
				}, i[ r ].l = 1 * new Date();
			a = s.createElement( o ),
				m = s.getElementsByTagName( o )[ 0 ];
			a.async = 1;
			a.src = g;
			m.parentNode.insertBefore( a, m )
		})( window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga' );

		ga( 'create', 'UA-75786977-1', 'auto' );

	</script>
	<!-- End of Google Analytics-->
</head>
<body>
	<app>
		<style>
			html, body {
				width: 100%;
				height: 100%;
			}

			body {
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
			}

			app {
				display: flex;
				flex-direction: row;
				justify-content: center;
				align-items: center;
			}

			.loading-error {
				display: none;
				padding: 5px 15px;
				background: #fff6f6;
				color: #9f3a38;
				border: 1px solid #9f3a38;
			}
		</style>
		<img src="assets/images/loading.gif" alt="Loading..." width="32" height="33">
		<div>Loading...</div>
		<div class="loading-error">x_x</div>
	</app>

	<script src="../jspm_packages/system-polyfills.src.js"></script>
	<script src="assets/node_modules/es6-shim.js"></script>
	<script src="../jspm_packages/system.src.js"></script>
	<script src="assets/node_modules/Rx.js"></script>
	<script src="../jspm.config.js"></script>
	<script>
		System.import( "app/boot" ).catch( function( error ) {
			console.error( error );
			displayError();
		} );

		function displayError() {
			var nodesToHide = document.querySelectorAll( "app *:not( style )" );
			for( var i = 0; i < nodesToHide.length; i ++ ) {
				nodesToHide[ i ].style.display = "none";
			}
			document.querySelector( "app .loading-error" ).style.display = "block";
		}
	</script>
</body>
</html>