<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="carbon-platform - Integration Tests" verbose="1">
    <test name="Integration Tests">
        <groups>
            <run>
                <include name="integration-tests"/>
                <exclude name="unit-test"/>
            </run>
        </groups>

        <packages>
            <package name="com.carbonldp.test.*"/>
        </packages>
    </test>
</suite>
