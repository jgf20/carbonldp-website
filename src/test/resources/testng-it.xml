<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="carbon-platform - Integration Tests">
    <listeners>
        <listener class-name="com.carbonldp.test.DisableTestClassInterceptor">
            <test name="Integration Tests">
                <groups>
                    <run>
                        <include name="integration-tests"/>
                    </run>
                </groups>

                <packages>
                    <package name="com.carbonldp.test.*"/>
                </packages>
            </test>
        </listener>
    </listeners>
</suite>
