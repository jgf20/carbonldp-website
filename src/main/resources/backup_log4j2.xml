<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Syslog name="RFC5424" format="RFC5424" host="localhost" port="601"
                protocol="TCP" appName="MyApp" includeMDC="true"
                facility="USER" enterpriseNumber="18060" newLine="true"
                newLineEscape="\n"
                messageId="Audit" mdcId="mdc" id="App"
                connectTimeoutMillis="1000" reconnectionDelayMillis="5000">
            <LoggerFields>
                <KeyValuePair key="thread" value="%t"/>
                <KeyValuePair key="priority" value="%p"/>
                <KeyValuePair key="category" value="%c"/>
                <KeyValuePair key="exception" value="%ex"/>
            </LoggerFields>
        </Syslog>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p [%40c{1.}]%notEmpty{[%mdc{shortRequestID}]} -- %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.eclipse.jetty" level="WARN"/>
        <Logger name="org.springframework" level="DEBUG"/>
        <Logger name="org.openrdf" level="WARN"/>
        <Logger name="com.carbonldp" level="TRACE"/>

        <Root level="DEBUG">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RFC5424"/>
        </Root>
    </Loggers>
</Configuration>